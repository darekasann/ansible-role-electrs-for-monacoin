[Unit]
Description=Electrs daemon
After=network-online.target

[Service]
WorkingDirectory=/home/electrum/.monacoin
ExecStart=/home/electrum/monacoin/monacoind
User=electrum
Type=simple
KillMode=process
TimeoutSec=60
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=monacoind
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
